    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}",
            "restart": true,
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },



        {
            "type": "node",
            "request": "launch",
            "name": "启动程序",
            "program": "${workspaceFolder}\\test\\index.js"
        },        
        {
            "type": "node",
            "request": "launch",
            "name": "test",
            "program": "${workspaceFolder}\\test.ts"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "ts",
            "program": "${workspaceFolder}\\example\\index.js"
        }
    ]
}